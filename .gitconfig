[push]
  followTags = true
[alias]
	s = !git status -s
	c = !git add --all && git commit -m
	l = !git log --pretty=format:'%C(blue)> %C(red)%h%C(yellow)%d %s %C(white)- [%C(green)%cn%C(white)] - %C(cyan)%cr %C(blue)<'
	a = !git add --all && git commit --amend --no-edit
  count = !git shortlog -s --grep
